<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
 
<hibernate-mapping package="com.softserve.edu.ita">
 
    <class name="Product" table="product">
        <id name="id" column="id">
            <generator class="increment"/>
        </id>
        <property name="name" type="java.lang.String" column="name"/>
        <property name="maker" type="java.lang.String" column="maker"/>
        <property name="country" type="java.lang.String" column="country"/>
        <property name="price" type="decimal" column="maker"/>
    </class>
 
</hibernate-mapping>